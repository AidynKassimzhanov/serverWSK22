<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head.ejs") %>
<body>
    <%- include("partials/header.ejs") %>
    <h1>Users</h1>
    <% users.map(user => { %>
        <div class="adminPanel"> 
            <span><%=user.username %></span>
            <span><%=user.createdAt.toISOString().slice(0, 19).replace('T', ' ') %></span>
            <span><%=user.updatedAt.toISOString().slice(0, 19).replace('T', ' ') %></span>
            <form action="/users/<%=user.id %>/lock" method="POST">
                <!-- <%= %> -->
                <% if(user.deleted_reason === '' || user.deleted_reason === null) { %>
                    <input 
                        type="submit" 
                        name="reason" 
                        value="Spamming"
                    >
                    <input 
                        type="submit" 
                        name="reason" 
                        value="Cheating"
                    >
                    <input 
                        type="submit" 
                        name="reason" 
                        value="Other"
                    >
                    
                <% } else { %>
                    <input 
                        type="submit" 
                        name="reason" 
                        value="Unlock"
                    >
                <% }%>
            </form>
        </div>
        
    <% }) %>
</body>
</html>